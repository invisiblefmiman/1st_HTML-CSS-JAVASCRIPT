    <script>
     function showSection(sectionId) {
    var sections = document.querySelectorAll('section');
    sections.forEach(function (section) {
        section.style.display = 'none';
    });
    var selectedSection = document.getElementById(sectionId);
    if (selectedSection) {
        selectedSection.style.display = 'block';
    }
}

var modal = document.getElementById('Inaintemeu');

function showInainte() {
    modal.style.display = 'block';
}

function closeModal() {
    modal.style.display = 'none';
}

function showContent() {
    closeModal();
    var response = confirm("Dorești să afli informații despre Leo Messi?");
    if (!response) {
        var specialMessage = document.createElement('div');
        document.body.style.backgroundImage = "url('https://staticg.sportskeeda.com/editor/2023/01/32f00-16728353050846-1920.jpg?w=840')";
        document.body.style.backgroundSize = "cover";
        document.body.style.backgroundRepeat = "no-repeat";
        specialMessage.innerHTML = '<p style = "font-size:60px;margin-top:370px;background-color:black">La revedere</p>';
        document.body.innerHTML = ''; // Golește corpul documentului
        document.body.appendChild(specialMessage); // Adaugă mesajul special
    } else {
        showSection('inainte');
    }
}

window.onload = showInainte;
    </script>
